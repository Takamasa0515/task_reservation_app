<div class = "container-field room">
	<h4 class = "pb-4">検索結果：<%= Room.count%>件</h4>
	<div class = "row">
		<% @rooms.each do |room| %>
			<div class = "col-sm-6 col-lg-4 col-xl-3">
				<div class = "room-frame-inner">
					<%= link_to room_path(room.id) do %>
						<div class = "room-image-out">
							<% if room.room_image.attached? %>
								<%= image_tag room.room_image, class: "room-show-image" %>
							<% else %>
								<%= image_tag "default_room.jpg", class: "room-show-image" %>
							<% end %>
						</div>
						<div class = "room-profile">
							<p class = "room-profile-name"><%= room.room_name%></p>
							<p class = "room-profile-city"><%= room.room_address %></p>
							<p class = "room-profile-introduction"><%= room.room_introduction %></p>
							<p class = "room-profile-price price-icon"><%= room.room_price %></p>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>