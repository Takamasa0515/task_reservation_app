<div class = " container room-show">
<h2>再予約する</h2>
	<div	class = "row">
		<div class = "col-md-8">
			<% if @reservation.room.room_image.attached? %>
				<%= image_tag room.room_image, class: "room-show-image" %>
			<% else %>
				<%= image_tag "default_room.jpg", class: "room-show-image" %>
			<% end %>
				<div class = "room-show-detile">
					<div	class = "room-show-profile">
						<p class = "room-show-profile-name"><%= @reservation.room.room_name %></p>
						<p class = "room-show-profile-address"><%= @reservation.room.room_address%></p>
					</div>
				</div>
				<p class = "room-show-detile-content"><%= @reservation.room.room_introduction %></p>
		</div>
		<div class = "col-md-4">
			<div class = "room-show-nav">
				<h5 class = "price-icon"><%= @reservation.room.room_price %> / 日</h5>
				<div class = "room-show-date-select">
					<%= form_with model: @reservation, local: true, url: {controller: "reservations", action: "edit_confirm"}, data: { turbo: false }  do |f|%>
						<%= f.label :start_date, "開始日" %>
						<%= f.date_field :start_date, class: "form-control mb-4" %>
						<% if flash[:error_start_date].present? %>
								<% flash[:error_start_date].each do |message| %>
									<p class = "ErrorMessages" ><%= message %></p>
								<% end %>
						<% end %>
						<%= f.label :end_date, "終了日" %>
						<%= f.date_field :end_date, class: "form-control mb-4" %>
						<% if flash[:error_end_date].present? %>
								<% flash[:error_end_date].each do |message| %>
									<p class = "ErrorMessages" ><%= message %></p>
								<% end %>
						<% end %>
						<%= f.label :person_num, "人数" %>
						<%= f.number_field :person_num, class: "form-control mb-4" %>
						<% if flash[:error_person_num].present? %>
								<% flash[:error_person_num].each do |message| %>
									<p class = "ErrorMessages" ><%= message %></p>
								<% end %>
						<% end %>
						<%= render "shared/error_messages", obj: @reservation %>
						<%= f.submit "予約する", class: "btn btn-primary form-control"%>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>