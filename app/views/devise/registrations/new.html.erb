<div class = "container device">
  <div class = "device_frame">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <p class = "my-4">新しいアカウントを作成</p>
      <div class = "device_inner">
        <div class = "new-user">
          <div class =  "field form-row">
            <div class = "required-b col-2"></div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control px-2 col-10", placeholder: "ユーザー名" %>
          </div>

          <div class="field form-row">
            <div class = "required-b col-2"></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control px-2 col-10", placeholder: "メールアドレス"  %>
          </div>

          <div class="field form-row">
            <div class = "required-b col-2"></div>
            <%= f.password_field :password, autocomplete: "new-password", :class => "form-control px-2 col-10", placeholder: "パスワード"  %>
          </div>

          <div class="field form-row">
            <div class = "required-b col-2"></div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control px-2 col-10", placeholder: "パスワード確認" %>
          </div>

          <div class="actions">
            <%= f.submit "新しいアカウントを作成", :class => "form-control btn-primary my-4"%>
          </div>
        </div>
  <% end %>

  <%= render "devise/shared/login" %>
    </div>
  </div>
</div>