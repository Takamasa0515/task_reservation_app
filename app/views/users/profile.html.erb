<%= form_with model: @user, data: { turbo: false } do |f|%>
<div class = "container-field user">
	<div class = "row">
		<div class = "col-lg-2 user-nav user-nav-pc d-lg-block d-none">
			<ul>
				<li><%= link_to "アカウント", :users_account %></li>
				<li class = "active"><%= link_to "プロフィール", :users_profile %></li>
			</ul>
		</div>
		<div class = "col-lg-2 user-nav user-nav-mobile d-lg-none">
			<ul>
				<li><%= link_to "アカウント", :users_account %></li>
				<li class = "active"><%= link_to "プロフィール", :users_profile %></li>
			</ul>
		</div>
		<div class = "col-md-10 user-view">
			<div class = "user-view-box">
					<div class = "update-content">
						<div class = "row">
							<h5>プロフィール</h5>
						</div>
					</div>
					<div class = "update-content">
						<div class = "row">
							<div class = "col-md-6 offset-md-3 ">
								<div class = "icon-box">
								<% if @user.avatar.attached? %>
									<%= image_tag @user.avatar.variant(resize: "80x80") %>
								<% else %>
									<img src = "https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png">
								<% end %>
								</div>
							</div>
						</div>
					</div>
					<div class = "update-content">
						<div class = "row">
							<%= f.label :avatar, "アイコン画像", class: "col-md-3" %>
							<%= f.file_field :avatar, class: "mb-4 col-md-9" %>
						</div>
					</div>
					<div class = "update-content">
						<div class = "row">
							<%= f.label :name, "名前", class: "col-md-3 required-a" %>
							<%= f.text_field :name, value:"#{@user.name}", class: "form-control mb-4 col-md-9" %>
						</div>
					</div>
					<div class = "update-content">
						<div class = "row">
							<%= f.label :introduction ,"自己紹介", class: "col-md-3 required-a" %>
							<%= f.text_area :introduction, value:"#{@user.introduction}", placeholder: "自己紹介を入力", class: "form-control mb-4 col-md-9"%>
						</div>
					</div>
					<div class = "update-content">
						<div class = "row">
							<%= f.submit "送信", class: "col-md-2 btn btn-primary mx-3" %>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>
<% end %>