<div class = "container-field user">
	<div class = "row">
		<div class = "col-lg-2 user-nav user-nav-pc d-lg-block d-none">
			<ul>
				<li class = "active"><%= link_to "アカウント", :users_account %></li>
				<li><%= link_to "プロフィール", :users_profile %></li>
			</ul>
		</div>
		<div class = "col-lg-2 user-nav user-nav-mobile d-lg-none">
			<ul>
				<li class = "active"><%= link_to "アカウント", :users_account %></li>
				<li><%= link_to "プロフィール", :users_profile %></li>
			</ul>
		</div>
		<div class = "col-md-10 user-view">
			<div class = "user-view-box">
				<div class = "update-content">
					<div class = "row">
						<h5>アカウント</h5>
					</div>
				</div>
				<%= form_with model: @user do |f|%>
				<div class = "update-content">
					<div class = "row">
						<%= f.label :email, "メールアドレス", class: "col-md-3"%>
						<div class = "col-md-9"><%= current_user.email%></div>
					</div>
				</div>
				<div class = "update-content">
					<div class = "row">
						<%= f.label :password, "パスワード", class: "col-md-3"%>
						<div class = "col-md-9">*********</div>
					</div>
				</div>
				<div class = "update-content">
					<div class = "row">
						<a class = "col-md-2 btn btn-primary mx-3" href="<%= edit_user_registration_path %>">編集</a>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>